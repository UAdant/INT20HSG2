<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Вибір типу пристрою -->
    <TextView
        android:id="@+id/textViewDeviceType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Виберіть тип пристрою:"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spinnerDeviceType"
        android:layout_width="393dp"
        android:layout_height="61dp"
        android:layout_below="@id/textViewDeviceType"
        android:layout_marginTop="8dp" />

    <!-- Вибір виробника -->
    <TextView
        android:id="@+id/textViewManufacturer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerDeviceType"
        android:layout_marginTop="16dp"
        android:text="Виберіть виробника:"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spinnerManufacturer"
        android:layout_width="387dp"
        android:layout_height="55dp"
        android:layout_below="@id/textViewManufacturer"
        android:layout_marginTop="8dp" />

    <!-- Вибір моделі -->
    <TextView
        android:id="@+id/textViewModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerManufacturer"
        android:layout_marginTop="16dp"
        android:text="Виберіть модель:"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spinnerModel"
        android:layout_width="389dp"
        android:layout_height="50dp"
        android:layout_below="@id/textViewModel"
        android:layout_marginTop="8dp" />

    <!-- Кнопка для переходу на інший екран -->
    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerModel"
        android:layout_marginTop="16dp"
        android:text="Далі" />
</RelativeLayout>
